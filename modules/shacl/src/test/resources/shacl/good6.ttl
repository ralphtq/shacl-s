prefix : <http://example.org/>
prefix sh: <http://www.w3.org/ns/shacl#>
prefix xsd: <http://www.w3.org/2001/XMLSchema#>
prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>

:S a sh:NodeShape; 
   sh:targetNode :x ;
   sh:property [
     sh:path :p; 
     sh:class :Person
   ] .

:x :p :p1 ;
   :p :sp1 .
   
:p1 a :Person .
:SubPerson rdfs:subClassOf :Person .
:sp1 a :SubPerson .

:sp2 a :NoPerson .
